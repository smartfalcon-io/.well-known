{
  "@context": {
    "@version": 1.1,

    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "bp": "https://example.com/contexts/battery-passport#",

    /* ───────── Battery Manufacturer Identifier (BMI) ───────── */
    "country_code": "bp:countryCode",
    "manufacturer_identifier": "bp:manufacturerIdentifier",
    "battery_passport_identification": "bp:batteryPassportIdentification"


    /* ───────── Battery Descriptor Section (BDS) ───────── */
    "battery_capacity": { "@id": "bp:batteryCapacity", "@type": "xsd:decimal" },
    "battery_chemistry": "bp:batteryChemistry",
    "nominal_voltage": { "@id": "bp:nominalVoltage", "@type": "xsd:decimal" },
    "cell_origin": "bp:cellOrigin",
    "extinguisher_class": "bp:extinguisherClass",

    /* ───────── Battery Identifier (BI) ───────── */
    "date_of_manufacturing": { "@id": "bp:dateOfManufacturing", "@type": "xsd:date" },
    "factory_code": "bp:factoryCode",
    "sequential_production_number": "bp:sequentialProductionNumber",
    "tac_number": "bp:tacNumber",
    "unique_serial_number": "bp:uniqueSerialNumber",

    /* ───────── Technical Characteristics ───────── */
    "number_of_cells": { "@id": "bp:numberOfCells", "@type": "xsd:integer" },
    "internal_resistance": { "@id": "bp:internalResistance", "@type": "xsd:decimal" },
    "battery_weight": { "@id": "bp:batteryWeight", "@type": "xsd:decimal" },
    "battery_warranty": "bp:batteryWarranty",
    "cell_type": "bp:cellType",
    "cell_form_factor": "bp:cellFormFactor",
    "battery_pack_construction": "bp:batteryPackConstruction",
    "module_construction": "bp:moduleConstruction",
    "cooling_system_type": "bp:coolingSystemType",

    "power_capability_80_soc": { "@id": "bp:powerCapability80SoC", "@type": "xsd:decimal" },
    "power_capability_20_soc": { "@id": "bp:powerCapability20SoC", "@type": "xsd:decimal" },
    "usable_capacity_80_20": { "@id": "bp:usableCapacity80To20", "@type": "xsd:decimal" },

    "bms_hardware_version": "bp:bmsHardwareVersion",
    "bms_software_version": "bp:bmsSoftwareVersion",

    "disassembly_method": "bp:disassemblyMethod",
    "circularity_method": "bp:circularityMethod",
    "recyclability": "bp:recyclability",

    /* ───────── Battery Material Composition Section (BMCS) ───────── */
    "material_anode": "bp:materialAnode",
    "material_cathode": "bp:materialCathode",
    "material_electrolyte": "bp:materialElectrolyte",
    "material_separator": "bp:materialSeparator",
    "material_current_collector": "bp:materialCurrentCollector",
    "material_battery_casing": "bp:materialBatteryCasing",
    "material_potting": "bp:materialPotting",

    "material_1_content": { "@id": "bp:material1Content", "@type": "xsd:decimal" },
    "material_2_content": { "@id": "bp:material2Content", "@type": "xsd:decimal" },
    "material_3_content": { "@id": "bp:material3Content", "@type": "xsd:decimal" },
    "material_4_content": { "@id": "bp:material4Content", "@type": "xsd:decimal" },

    /* ───────── Battery Carbon Footprint (BCF) ───────── */
    "total_bcf_scaled": { "@id": "bp:totalBatteryCarbonFootprint", "@type": "xsd:decimal" },
    "bcf_raw_material_stage": { "@id": "bp:bcfRawMaterialStage", "@type": "xsd:decimal" },
    "bcf_manufacturing_stage": { "@id": "bp:bcfManufacturingStage", "@type": "xsd:decimal" },
    "bcf_distribution_stage": { "@id": "bp:bcfDistributionStage", "@type": "xsd:decimal" },
    "bcf_end_of_life_stage": { "@id": "bp:bcfEndOfLifeStage", "@type": "xsd:decimal" },

    "bpan": "bp:bpan",
    "qr_code": "bp:qrCode",
    "server_reference": "bp:serverReference",

    /* ───────── Battery Dynamic Data (BDD) ───────── */
    "battery_category": "bp:batteryCategory",
    "battery_status": "bp:batteryStatus",
    "state_of_health": { "@id": "bp:stateOfHealth", "@type": "xsd:decimal" },
    "actual_disassembly_method": "bp:actualDisassemblyMethod",
    "actual_circularity_method": "bp:actualCircularityMethod",
    "date_time_stamp": { "@id": "bp:dateTimeStamp", "@type": "xsd:dateTime" },
    "qr_code_recovery_without_bpan": "bp:qrCodeRecoveryWithoutBPAN",
    "reserved_field_1": "bp:reservedField1",
    "reserved_field_2": "bp:reservedField2"
  }
}
